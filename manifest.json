{
    "manifest_version": 2,
    "name": "bd-copy",
    "version": "1.0",
    "description": "Optimiza el flujo de estudio en la plataforma boot.dev, permitiendo copiar el contenido de las lecciones directamente al portapapeles.",
    "icons": {
        "48": "icon.png"
    },
    "permissions": ["clipboardWrite", "activeTab"],
    "content_scripts": [
        {
            "matches": ["https://www.boot.dev/lessons/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "@addon-example",
            "strict_min_version": "58.0"
        }
    }
}
